{% extends "base.twig" %}
{% block title %}Dashboard{% endblock %}
{% block body %}


    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Dashboard</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
                <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
            </div>
            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle d-flex align-items-center gap-1">
                <svg class="bi"><use xlink:href="#calendar3"/></svg>
                This week
            </button>
        </div>
    </div>

    Application config file (/Application/application.json) <b> {{is_exist_appconfig}} </b>
    <form action="/test-email" method="POST">
        <div class="card mt-4">
            <div class="card-header">
                Test email
            </div>
            <div class="card-body">
                <h5 class="card-title">Try to send an email for yourself</h5>
                <label for="email">Email</label>
                <input class="form-control" type="email" id="email" name="email"/>
                <label for="subject">Subject</label>
                <input class="form-control" type="text" id="subject" name="subject"/>
                <label for="body">Email body</label>
                <textarea class="form-control" id="body" name="body"></textarea>
                <button {% if isNotAdmin() %} disabled="disabled" {% endif %} class="btn btn-primary mt-2">Send</button>
            </div>
        </div>
    </form>



{% endblock %}
